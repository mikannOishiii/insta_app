<header class="navbar navbar-fixed-top navbar-light bg-warning">
  <div class="container">  
    <div class="header_inner">  
      <nav class="">
        <div class="navbar-logo navbar-left">
          <%= link_to "みかん太郎のInsta App", root_path, id: "logo" %>
        </div>
        <%= render 'layouts/explore_form' %>
        <ul class="nav navbar-nav navbar-right">
        <% if logged_in? %>
          <li>
            <%= link_to notifications_path do %>
              <i class="fa fa-heart fa-2x"></i>
              <% if unchecked_notifications.any? %>
                <i class="fa fa-heart fa-2x"></i>
              <% end %>
            <% end %> 
          </li>
          <li>
            <%= link_to current_user do %>
              <i class="far fa-user fa-2x"></i>
            <% end %>
          </li>
        <% else %>
          <li><%= link_to "ログイン", accounts_login_path, class:"btn btn-default" %></li>
          <li><%= link_to "登録", accounts_signup_path, class:"btn btn-default" %></li>
        <% end %>
        </ul>
      </nav>
    </div>
  </div>
</header>