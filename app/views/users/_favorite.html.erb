<div id="favorite_form">
  <% if current_user.like?(post) %>
    <%= form_for(current_user.favorites.find_by(post_id: post.id), 
             html: { method: :delete },
             remote: true) do |f| %>
      <%= f.submit "お気に入りを解除する", class: "btn" %>
    <% end %>
  <% else %>
    <%= form_for(current_user.favorites.build, remote: true) do |f| %>
      <div><%= hidden_field_tag :post_id, post.id %></div>
      <%= f.submit "お気に入りに登録する", class: "btn btn-primary" %>
    <% end %>
  <% end %>
</div>