<% provide(:title, "Change password") %>
<h1>Change password</h1>

<div class="row">
  <div class="col-md-6 col-md-offset-3">
    <%= form_for(@user, url: password_change_path) do |f| %>
      <%= render 'shared/error_messages', object: f.object %>
      <%= f.label :password_old %>
      <%= f.password_field :password_old, class: 'form-control' %>

      <%= f.label :password_new %>
      <%= f.password_field :password_new, class: 'form-control' %>

      <%= f.label :password_new_confirmation %>
      <%= f.password_field :password_new_confirmation, class: 'form-control' %>

      <%= f.submit "Submit", class: "btn btn-primary" %>
    <% end %>
    
  </div>
</div>